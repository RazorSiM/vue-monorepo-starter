{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "prettier:check": {},
    "prettier:write": {},
    "lint:check": {},
    "lint:fix": {
      "dependsOn": ["prettier:write"]
    },
    "build": {
      "dependsOn": ["^build"]
    },
    "test:unit": {
      "inputs": [
        "src/**/*.ts",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.js"
      ]
    },
    "test:component": {
      "inputs": [
        "src/**/*.ts",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.js"
      ]
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.vue",
        "cypress/**/*.ts",
        "cypress/**/*.js"
      ]
    },
    "dev": {
      "cache": false
    }
  }
}

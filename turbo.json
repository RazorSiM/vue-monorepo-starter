{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "lint:check": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "**/*.ts",
        "**/*.js"
      ]
    },
    "lint:fix": {
      "inputs": [
        "**/*.ts",
        "**/*.js"
      ]
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "tsconfig.*.json",
        "tsconfig.json",
        "vite-library.config.ts",
        "vite.config.ts",
        "unocss.config.ts",
        "locales/**/*",
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.vue"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "type-check": {
      "dependsOn": [
        "^build"
      ]
    },
    "//#docs:build": {
      "outputs": [
        ".vitepress/dist/**"
      ]
    },
    "storybook:build": {
      "dependsOn": [
        "^build",
        "build"
      ],
      "inputs": [
        "unocss.config.ts",
        "vite.config.ts",
        "src/**/*.stories.ts",
        "src/**/*.mdx",
        "stories/**/*.ts",
        "stories/**/*.mdx",
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.vue"
      ],
      "outputs": [
        "storybook-static/**"
      ]
    },
    "test:unit": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.vue",
        "src/**/*.test.ts",
        "src/**/*.test.js",
        "tests/**/*.ts",
        "tests/**/*.js"
      ]
    },
    "test:component": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.vue",
        "src/**/*.cy.ts",
        "src/**/*.cy.js"
      ]
    },
    "test:e2e": {
      "dependsOn": [
        "^build",
        "build"
      ],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.vue",
        "e2e/**/*.ts",
        "e2e/**/*.js"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}